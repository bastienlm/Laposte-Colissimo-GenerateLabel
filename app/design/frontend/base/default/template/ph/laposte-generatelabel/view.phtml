?>
<h1><?php echo $this->__('Return product') ?></h1>
<?php $_orders = $this->listOfOrderAvailable(); ?>
<?php if($_orders->getSize()): ?>
    <?php echo $this->getChildHtml('cms_describe_first_method'); ?>
    <div class="dl-button">
        <form action="<?php echo $this->helper('lapostegeneratelabel')->getDownloadControllerUrl() ?>" method="post">
            <select name="order_id">
                <?php foreach ($_orders as $_order): ?>
                    <option value="<?php echo $_order->getId() ?>"><?php echo $this->__('Order #') . ' ' . $_order->getIncrementId() ?></option>
                <?php endforeach; ?>
            </select>
            <button class="button" type="submit">
                    <span>
                        <span><?php echo $this->__('Download label') ?></span>
                    </span>
            </button>
            <p><?php echo '(' . $this->__('pdf format') . ')'; ?></p>
        </form>
    </div>
<?php else: ?>
    <p><?php echo $this->__('Sorry, but for return a product you need a complete order in France') ?></p>
<?php endif; ?>
<?php $_downloadManualContent = $this->getChildHtml('cms_describe_second_method'); ?>
<?php if($_downloadManualContent): ?>
    <div class="manual-download">
        <?php echo $this->getChildHtml('cms_describe_second_method'); ?>
        <a href="<?php echo $this->helper('lapostegeneratelabel')->getDownloadManualControllerUrl() ?>">
            <button class="button">
                    <span>
                        <span><?php echo $this->__('Download Refund manual') ?></span>
                    </span>
            </button></a>
        <p><?php echo '(' . $this->__('pdf format') . ')'; ?></p>

    </div>
<?php endif; ?>
